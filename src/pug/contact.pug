extends layout/page

include mixin/cardHorisontal

block variables
	- var title = 'Контакты'

block head

block header

block content

	section.top-position

	.container

		+breadcrumb('Контакты', [])

		.component
			h1.mb-4 Контакты

			.row.align-items-lg-center.mb-4
				.col-lg-6.mb-3
					.vcard(itemscope='', itemtype='http://schema.org/LocalBusiness')
						strong.fn.org(itemprop='name') ООО "Авто Флот"
						ul.list-unstyled(itemprop='address', itemscope='', itemtype='http://schema.org/PostalAddress')
							li
								a.link.adr(href="https://yandex.ru/maps/50/perm/?ll=55.853449%2C58.036282&mode=search&oid=1109113284&ol=biz&sctx=ZAAAAAgBEAAaKAoSCebmG9E97UtAEScvMgG%2FBE1AEhIJAG2ZSpG4tT8RIq629DL%2Fpj8oCjAAONuo89Dw4ba1QECczQZIAVXNzMw%2BWABiEmRpcmVjdF9wYWdlX2lkPTI0MmoCcnVwAJ0BzczMPaABAKgBAA%3D%3D&sll=55.853449%2C58.036282&source=adrsnip&sspn=0.123253%2C0.036919&text=%D0%9E%D0%9E%D0%9E%20%C2%AB%D0%90%D0%B2%D1%82%D0%BE%20%D0%A4%D0%BB%D0%BE%D1%82%C2%BB&z=14")
									span.locality(itemprop='addressLocality') г. Пермь,
									|
									|
									span.street-address(itemprop='streetAddress') ул. Воронежская 41/1
							li Юридический адрес: Россия, 614113, г. Пермь, ул. Сивашская, 7

						ul.list-unstyled
							li
								strong Единый телефон:
								|
								|
								a.link.tel(href="tel:+73422501105" itemprop='telephone') 8 (342) 2-501-105
							li
								strong Эл. почта:
								|
								|
								a.link.email(href="mailto:office@man59.ru" itemprop='email') office@man59.ru

						ul.list-unstyled
							li
								strong Режим работы:
								br
								|
								time.workhours(itemprop="openingHours" datetime="Mo,Su 8:00−21:00") Пн-вс с 8:00 до 21:00 (без выходных)

				.col-lg-6.mb-3
					script(type='text/javascript', charset='utf-8', async='', src='https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3Af3cb0de92b47ad72bc5dabed8ee32c90b58ff30b6df1adbc6869f6b65f898de1&width=100%25&height=240&lang=ru_RU&scroll=true')


			ul.list-group.list-group-flush
				-var iList = 0
				-var list = ["Продажа автомобилей и автобусов", "Гарантийное и послегарантийное обслуживание", "Технический осмотр транспортных средств", "Продажа запасных частей", "Бухгалтерия", "Техническая помощь на выезде (эвакуация, ремонт)"]

				each value in list
					li.list-group-item
						-iList++
						a.link.font-weight-bold.collapse-toggle(data-toggle='collapse', href='#collapse-'+iList, role='button', aria-expanded='false', aria-controls='collapse-'+iList)
							i.icon.icon-link_arrow_outline_right
							=value
						.collapse(id='collapse-'+iList)
							.py-3
								.h3 Режим работы
								p Понедельник-воскресенье с 8:00 до 21:00 (без выходных)
								.row
									-var i = 0
									while i < 4
										.col-md-6.col-lg-4.col-xl-6.mb-4
											.card.h-100
												.row.no-gutters
													.col-md-12.col-xl-5
														img.card-img.h-auto.img-fluid(src="holder.js/480x480" alt=i++)
													.col-md-12.col-xl-7.d-flex.flex-column
														ul.list-group.list-group-flush
															li.list-group-item
																.h3.card-title.mb-0 Пальков Роман Викторович
															li.list-group-item
																strong Технический директор
															li.list-group-item Tel:
																|
																|
																a.link(href="tel:+79815099249") +7 (981) 509-92-49
															li.list-group-item
																a.link(href="mailto:roman.palkov@man-vologda.ru") roman.palkov@man-vologda.ru



	section.bottom-position
		.functional-divider.my-5

		include module/news

block footer

	script(src="js/holder.min.js")

