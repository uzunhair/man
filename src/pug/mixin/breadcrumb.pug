mixin breadcrumb(active_item, items)
	nav(aria-label="breadcrumb")
		ol.breadcrumb.js_breadcrumb.d-none.d-lg-flex(itemscope itemtype="http://schema.org/BreadcrumbList")
			li.breadcrumb-item(itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem")
				a(href="#", itemprop="item")
					span(itemprop="name") Главная
					meta(itemprop="position" content="1")
			-var items = items || ''
			-var i = 2
			each item in items
				li.breadcrumb-item.js_breadcrumb-item(itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem")
					a(href="#", itemprop="item" title=item)
						span(itemprop="name")= item
						meta(itemprop="position" content=i++)
					.js_breadcrumb-dropdown.breadcrumb-dropdown
						h4=item
			li.breadcrumb-item.active(aria-current="page")=active_item
