	+section_title(layout.tooltips.title)
	.py-4
		button.btn.btn-secondary(type='button', data-toggle='tooltip', data-placement='top', title='Tooltip on top')
			| Tooltip on top
		button.btn.btn-secondary(type='button', data-toggle='tooltip', data-placement='right', title='Tooltip on right')
			| Tooltip on right
		button.btn.btn-secondary(type='button', data-toggle='tooltip', data-placement='bottom', title='Tooltip on bottom')
