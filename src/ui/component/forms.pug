section.py-3(id= layout.forms.id)
	+section_title(layout.forms.title)
	.py-4
		form
			.form-group
				label(for='exampleFormControlInput1') Email address
				input#exampleFormControlInput1.form-control(type='email', placeholder='name@example.com')
			.form-group
				label(for='exampleFormControlSelect1') Example select
				select#exampleFormControlSelect1.form-control
					option 1
					option 2
					option 3
					option 4
					option 5
			.form-group
				label(for='exampleFormControlSelect2') Example multiple select
				select#exampleFormControlSelect2.form-control(multiple='')
					option 1
					option 2
					option 3
					option 4
					option 5
			.form-group
				label(for='exampleFormControlTextarea1') Example textarea
				textarea#exampleFormControlTextarea1.form-control(rows='3')

	h4 Sizes
	hr
	.form-group
		input.form-control.form-control-lg(type='text', placeholder='.form-control-lg')
	.form-group
		input.form-control(type='text', placeholder='Default input')
	.form-group
		input.form-control.form-control-sm(type='text', placeholder='.form-control-sm')

	.row.pt-4
		.col-lg-6
			h4 Check
			hr
			.form-check
				input#defaultCheck1.form-check-input(type='checkbox', value='')
				label.form-check-label(for='defaultCheck1')
					| Default checkbox
			.form-check
				input#defaultCheck2.form-check-input(type='checkbox', value='', disabled='')
				label.form-check-label(for='defaultCheck2')
					| Disabled checkbox

			.mt-4
				.form-check.form-check-inline
					input#inlineCheckbox1.form-check-input(type='checkbox', value='option1')
					label.form-check-label(for='inlineCheckbox1') 1
				.form-check.form-check-inline
					input#inlineCheckbox2.form-check-input(type='checkbox', value='option2')
					label.form-check-label(for='inlineCheckbox2') 2
				.form-check.form-check-inline
					input#inlineCheckbox3.form-check-input(type='checkbox', value='option3', disabled='')
					label.form-check-label(for='inlineCheckbox3') 3 (disabled)
		.col-lg-6
			h4 Radio
			hr
			.form-check
				input#exampleRadios1.form-check-input(type='radio', name='exampleRadios', value='option1', checked='')
				label.form-check-label(for='exampleRadios1')
					| Default radio
			.form-check
				input#exampleRadios2.form-check-input(type='radio', name='exampleRadios', value='option2')
				label.form-check-label(for='exampleRadios2')
					| Second default radio
			.form-check.disabled
				input#exampleRadios3.form-check-input(type='radio', name='exampleRadios', value='option3', disabled='')
				label.form-check-label(for='exampleRadios3')
					| Disabled radio
			div
				.form-check.form-check-inline
					input#inlineRadio1.form-check-input(type='radio', name='inlineRadioOptions', value='option1')
					label.form-check-label(for='inlineRadio1') 1
				.form-check.form-check-inline
					input#inlineRadio2.form-check-input(type='radio', name='inlineRadioOptions', value='option2')
					label.form-check-label(for='inlineRadio2') 2
				.form-check.form-check-inline
					input#inlineRadio3.form-check-input(type='radio', name='inlineRadioOptions', value='option3', disabled='')
					label.form-check-label(for='inlineRadio3') 3 (disabled)

	h3.pt-4 Custom forms
	hr
	.row
		.col-lg-6
			.custom-control.custom-checkbox
				input#customCheck1.custom-control-input(type='checkbox')
				label.custom-control-label(for='customCheck1') Check this custom checkbox

			.custom-control.custom-checkbox
				input#customCheckDisabled.custom-control-input(type='checkbox', disabled='')
				label.custom-control-label(for='customCheckDisabled') Check this custom checkbox
		.col-lg-6
			.custom-control.custom-radio
				input#customRadio1.custom-control-input(type='radio', name='customRadio')
				label.custom-control-label(for='customRadio1') Toggle this custom radio
			.custom-control.custom-radio
				input#customRadio2.custom-control-input(type='radio', name='customRadio')
				label.custom-control-label(for='customRadio2') Or toggle this other custom radio
			.custom-control.custom-radio
				input#radio3.custom-control-input(type='radio', name='radioDisabled', disabled='')
				label.custom-control-label(for='customRadioDisabled') Toggle this custom radio

	h4.pt-4 Server side
	hr
	form
		.form-row
			.col-md-4.mb-3
				label(for='validationServer01') First name
				input#validationServer01.form-control.is-valid(type='text', placeholder='First name', value='Mark', required='')
				.valid-feedback
					| Looks good!
			.col-md-4.mb-3
				label(for='validationServer02') Last name
				input#validationServer02.form-control.is-valid(type='text', placeholder='Last name', value='Otto', required='')
				.valid-feedback
					| Looks good!
			.col-md-4.mb-3
				label(for='validationServerUsername') Username
				.input-group
					.input-group-prepend
						span#inputGroupPrepend3.input-group-text @
					input#validationServerUsername.form-control.is-invalid(type='text', placeholder='Username', aria-describedby='inputGroupPrepend3', required='')
					.invalid-feedback
						| Please choose a username.
		.form-row
			.col-md-6.mb-3
				label(for='validationServer03') City
				input#validationServer03.form-control.is-invalid(type='text', placeholder='City', required='')
				.invalid-feedback
					| Please provide a valid city.
			.col-md-3.mb-3
				label(for='validationServer04') State
				input#validationServer04.form-control.is-invalid(type='text', placeholder='State', required='')
				.invalid-feedback
					| Please provide a valid state.
			.col-md-3.mb-3
				label(for='validationServer05') Zip
				input#validationServer05.form-control.is-invalid(type='text', placeholder='Zip', required='')
				.invalid-feedback
					| Please provide a valid zip.
		.form-group
			.form-check
				input#invalidCheck3.form-check-input.is-invalid(type='checkbox', value='', required='')
				label.form-check-label(for='invalidCheck3')
					| Agree to terms and conditions
				.invalid-feedback
					| You must agree before submitting.
		button.btn.btn-primary(type='submit') Submit form

	h4.pt-4 Supported elements
	hr
	form.was-validated
		.custom-control.custom-checkbox.mb-3
			input#customControlValidation1.custom-control-input(type='checkbox', required='')
			label.custom-control-label(for='customControlValidation1') Check this custom checkbox
			.invalid-feedback Example invalid feedback text
		.custom-control.custom-radio
			input#customControlValidation2.custom-control-input(type='radio', name='radio-stacked', required='')
			label.custom-control-label(for='customControlValidation2') Toggle this custom radio
		.custom-control.custom-radio.mb-3
			input#customControlValidation3.custom-control-input(type='radio', name='radio-stacked', required='')
			label.custom-control-label(for='customControlValidation3') Or toggle this other custom radio
			.invalid-feedback More example invalid feedback text
		.form-group
			select.custom-select(required='')
				option(value='') Open this select menu
				option(value='1') One
				option(value='2') Two
				option(value='3') Three
			.invalid-feedback Example invalid custom select feedback
		.custom-file
			input#validatedCustomFile.custom-file-input(type='file', required='')
			label.custom-file-label(for='validatedCustomFile') Choose file...
			.invalid-feedback Example invalid custom file feedback


